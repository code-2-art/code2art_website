---
interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  jsonLd?: Record<string, any>;
}

const SITE = 'https://code2art.com';

const {
  title = '实验编程 | 艺术是算法的叛徒',
  description = '探索科技 × 艺术的边界',
  ogImage = '/og-cover.jpg',
  jsonLd,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, SITE).href;
const absoluteOgImage = ogImage.startsWith('http') ? ogImage : new URL(ogImage, SITE).href;

const websiteSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: '实验编程 Experimental Programming',
  alternateName: 'Code2Art',
  url: SITE,
  description: '用计算编程进行艺术创作的社群与知识平台',
  inLanguage: 'zh-CN',
};

const orgSchema = {
  '@context': 'https://schema.org',
  '@type': 'Organization',
  name: '实验编程 Experimental Programming',
  alternateName: 'Code2Art',
  url: SITE,
  logo: `${SITE}/favicon.jpg`,
  description: '实验编程是一个探索科技与艺术融合的社群，前身为 HUDOIT，拥有 2000+ 成员，专注于生成艺术、创意编程、AI 影像等领域。',
  sameAs: [
    'https://github.com/code-2-art',
  ],
};
---

<html lang="zh-CN" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={absoluteOgImage} />
    <meta property="og:site_name" content="实验编程 Experimental Programming" />
    <meta property="og:locale" content="zh_CN" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={absoluteOgImage} />

    <!-- RSS -->
    <link rel="alternate" type="application/rss+xml" title="实验编程 RSS" href={`${SITE}/rss.xml`} />

    <link rel="icon" href="/favicon.jpg" />
    <!-- 使用本地托管的Inter字体，提升中国大陆访问速度 -->
    <link href="/fonts/inter.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css" rel="stylesheet"/>

    <!-- JSON-LD: WebSite + Organization -->
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(orgSchema)} />

    <!-- JSON-LD: Page-specific (BlogPosting, Event, etc.) -->
    {jsonLd && <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />}
  </head>
  <body class="font-inter bg-light text-dark antialiased">
    <slot />
  </body>
</html>