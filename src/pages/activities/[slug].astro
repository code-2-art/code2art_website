---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getActivities, type Activity } from '../../lib/feishuActivities';

export async function getStaticPaths() {
  const posts = await getActivities();
  return posts.map((p) => ({ params: { slug: p.slug }, props: { p } }));
}

const { slug } = Astro.params;

let activity: Activity | null = null;
try {
  const acts = await getActivities();
  activity = acts.find(a => a.slug === slug) ?? null;
} catch (e) {
  console.warn('Feishu activities fetch failed in [slug].astro:', e);
}

if (!activity) {
  throw new Error(`Activity not found: ${slug}`);
}
