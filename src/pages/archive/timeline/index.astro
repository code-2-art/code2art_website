---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Navbar from '../../../components/Navbar.astro';

const milestones = [
  { year: '2016', title: '实验编程创立', description: 'HUDOIT论坛演进为实验编程社群' },
  { year: '2018', title: '首期训练营', description: '开展系统化的生成艺术教学' },
  { year: '2020', title: '高校合作启动', description: '与央美、同济等院校建立合作' },
  { year: '2022', title: 'AI艺术探索', description: '全面投入生成式AI艺术创作与研究' },
  { year: '2024', title: '十周年筹备', description: '启动2016-2026十周年系列活动' },
  { year: '2026', title: '十周年庆典', description: '线上展、年刊、系列活动' },
];
---

<BaseLayout title="Timeline 年表 | 实验编程 Archive" description="2016-2026：关键节点与内容索引">
  <Navbar />

  <main class="pt-32 pb-20">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-8">
        <a href="/archive/" class="text-primary hover:underline">← 返回 Archive</a>
      </div>

      <div class="text-center max-w-4xl mx-auto mb-16">
        <span class="text-primary font-semibold text-lg">发展历程</span>
        <h1 class="text-[clamp(2.5rem,5vw,4rem)] font-bold mt-4 mb-6">Timeline 年表</h1>
        <p class="text-xl text-gray-600">2016-2026：关键节点与内容索引</p>
      </div>

      <div class="max-w-3xl mx-auto">
        <div class="relative">
          <!-- Timeline line -->
          <div class="absolute left-8 top-0 bottom-0 w-0.5 bg-gradient-to-b from-primary to-secondary"></div>

          {milestones.map((milestone, index) => (
            <div class="relative pl-20 pb-12">
              <!-- Timeline dot -->
              <div class={`absolute left-6 w-5 h-5 rounded-full border-4 border-white ${index % 2 === 0 ? 'bg-primary' : 'bg-secondary'}`}></div>

              <!-- Content -->
              <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-100">
                <div class="text-3xl font-bold text-primary mb-2">{milestone.year}</div>
                <h3 class="text-xl font-bold mb-2">{milestone.title}</h3>
                <p class="text-gray-600">{milestone.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </main>

  <footer class="bg-dark text-white pt-16 pb-8">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="border-t border-white/10 pt-8">
        <p class="text-gray-500 text-sm text-center">© 2016-{new Date().getFullYear()} 实验编程</p>
      </div>
    </div>
  </footer>
</BaseLayout>
