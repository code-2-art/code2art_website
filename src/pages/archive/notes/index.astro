---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Navbar from '../../../components/Navbar.astro';
import { getPosts } from '../../../lib/feishu';

let notes = [];
try {
  notes = await getPosts(20);
} catch (e) {
  console.warn('getPosts failed:', e);
}
---

<BaseLayout title="Notes 文稿 | 实验编程 Archive" description="讲义、备忘、教程、方法论">
  <Navbar />

  <main class="pt-32 pb-20">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-8">
        <a href="/archive/" class="text-primary hover:underline">← 返回 Archive</a>
      </div>

      <div class="text-center max-w-4xl mx-auto mb-16">
        <span class="text-primary font-semibold text-lg">知识笔记</span>
        <h1 class="text-[clamp(2.5rem,5vw,4rem)] font-bold mt-4 mb-6">Notes 文稿</h1>
        <p class="text-xl text-gray-600">讲义、备忘、教程、方法论</p>
      </div>

      {notes.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {notes.map((note) => (
            <a href={note.docUrl} class="bg-white rounded-xl p-6 shadow-md hover:shadow-lg transition-all border border-gray-100 group">
              <h3 class="text-lg font-bold mb-2 group-hover:text-primary transition-colors">{note.title}</h3>
              {note.summary && <p class="text-gray-600 text-sm line-clamp-2">{note.summary}</p>}
              <div class="mt-4 text-sm text-gray-500">{note.publishedAt?.slice(0,10)}</div>
            </a>
          ))}
        </div>
      ) : (
        <div class="text-center text-gray-500 py-12">
          <i class="fa fa-file-text-o text-6xl mb-4 text-gray-300"></i>
          <p class="text-xl">文稿内容正在整理中...</p>
        </div>
      )}
    </div>
  </main>

  <footer class="bg-dark text-white pt-16 pb-8">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="border-t border-white/10 pt-8">
        <p class="text-gray-500 text-sm text-center">© 2016-{new Date().getFullYear()} 实验编程</p>
      </div>
    </div>
  </footer>
</BaseLayout>
