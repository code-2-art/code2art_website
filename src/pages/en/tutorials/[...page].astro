---
import type { GetStaticPaths } from 'astro';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { t, getLocalePath } from '../../../i18n/ui';
import type { Lang } from '../../../i18n/ui';

const lang: Lang = 'en';

export const getStaticPaths = (async ({ paginate }) => {
  const posts = await getCollection('tutorials', ({ filePath }) => filePath.includes('/en/'));
  posts.sort((a, b) => new Date(b.data.publishedAt ?? 0).getTime() - new Date(a.data.publishedAt ?? 0).getTime());
  return paginate(posts, { pageSize: 9 });
}) satisfies GetStaticPaths;

const { page } = Astro.props;
const items = page.data;
const total = page.total;
const totalPages = page.lastPage;
const current = page.currentPage;

const countFn = t(lang, 'blogList.count') as (n: number) => string;
const makePageHref = (p: number) => (p <= 1 ? getLocalePath(lang, '/tutorials') : getLocalePath(lang, `/tutorials/${p}`));
const itemHref = (post: (typeof items)[number]) =>
  post.data.useDocUrl && post.data.docUrl ? post.data.docUrl : getLocalePath(lang, `/tutorials/${post.data.slug}`);
const externalAttrs = (post: (typeof items)[number]) =>
  post.data.useDocUrl && post.data.docUrl ? { target: '_blank' as const, rel: 'noopener noreferrer' } : {};
---

<BaseLayout title={`${t(lang, 'blogList.title')}${current > 1 ? ` - ${current}` : ''} | TechArt`} lang={lang} altPath={`tutorials${current > 1 ? `/${current}` : ''}`}>
  <section class="pt-28 pb-16 bg-gray-50 min-h-[calc(100vh-80px)]">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <header class="max-w-3xl mx-auto text-center mb-12">
        <h1 class="text-3xl md:text-4xl font-extrabold">{t(lang, 'blogList.title')}</h1>
        <p class="text-slate-500 mt-3">{countFn(total)}</p>
      </header>

      {items.length > 0 ? (
        <div class="grid md:grid-cols-3 gap-6">
          {items.map((post) => (
            <article class="bg-white rounded-2xl shadow-sm hover:shadow-md transition-all duration-300 overflow-hidden border">
              <div class="relative">
                {post.data.coverUrl ? (
                  <a href={itemHref(post)} {...externalAttrs(post)}>
                    <img src={post.data.coverUrl} alt={post.data.title} class="w-full h-44 object-cover" loading="lazy" />
                  </a>
                ) : (
                  <a href={itemHref(post)} {...externalAttrs(post)}>
                    <div class="w-full h-44 bg-gradient-to-br from-primary/10 to-secondary/10" />
                  </a>
                )}
              </div>
              <div class="p-5">
                <div class="flex items-center gap-2 mb-3">
                  {(post.data.tags ?? []).slice(0,2).map((tg) => (
                    <span class="bg-blue-100 text-blue-800 text-xs px-3 py-1 rounded-full">{tg}</span>
                  ))}
                  <span class="ml-auto text-slate-500 text-sm">{post.data.publishedAt?.slice(0,10)}</span>
                </div>
                <h3 class="text-lg font-bold mb-2 hover:text-primary transition-colors">
                  <a href={itemHref(post)} {...externalAttrs(post)}>{post.data.title}</a>
                </h3>
                {post.data.summary && <p class="text-slate-600 line-clamp-2">{post.data.summary}</p>}
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center text-slate-500 py-12">{t(lang, 'blogList.empty')}</div>
      )}

      {totalPages > 1 && (
        <nav class="mt-12 flex items-center justify-center gap-2">
          <a
            href={page.url.prev ?? '#'}
            class={`px-4 py-2 rounded-full border text-sm ${!page.url.prev ? 'pointer-events-none opacity-40' : 'hover:bg-gray-50 bg-white'}`}
            aria-disabled={!page.url.prev}
          >
            {t(lang, 'blogList.prev')}
          </a>

          <div class="hidden sm:flex items-center gap-1">
            {Array.from({ length: totalPages }).map((_, i) => {
              const p = i + 1;
              const active = p === current;
              return (
                <a
                  href={makePageHref(p)}
                  class={`px-3 py-2 rounded-full text-sm ${active ? 'bg-primary text-white border-primary' : 'border hover:bg-gray-50 bg-white'}`}
                >
                  {p}
                </a>
              );
            })}
          </div>

          <a
            href={page.url.next ?? '#'}
            class={`px-4 py-2 rounded-full border text-sm ${!page.url.next ? 'pointer-events-none opacity-40' : 'hover:bg-gray-50 bg-white'}`}
            aria-disabled={!page.url.next}
          >
            {t(lang, 'blogList.next')}
          </a>
        </nav>
      )}
    </div>
  </section>
</BaseLayout>
